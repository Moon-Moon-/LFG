<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/n_padding"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="@dimen/i_user_image"
        android:layout_height="@dimen/i_user_image" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/n_padding"
        android:text="@string/i_user_name"
        android:textColor="@color/lfg_text_base"/>

</LinearLayout>